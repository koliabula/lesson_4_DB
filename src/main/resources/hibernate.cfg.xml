<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/test</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">4880Mark</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="org.example.hw.enity.Post"/>
        <mapping class="org.example.hw.enity.PostComment"/>



